import sys

reps = int(sys.stdin.readline().rstrip())

for _ in range(reps):
    checking = sys.stdin.readline().rstrip()
    grade = 0
    score = 0

    for res in checking:
        if res == 'O':
            score += 1
        if res == 'X':
            score = 0
        grade += score
    print(grade)
