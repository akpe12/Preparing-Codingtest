import sys

n, m, k = map(int, sys.stdin.readline().split())
arr = list(map(int, sys.stdin.readline().split()))
count = 0
result = 0
arr.sort(reverse = True)

for _ in range(m):
    if count != k:
        result += arr[0]
        count += 1
    else:
        count = 0
        result += arr[1]
        count += 1
print(result)
