import sys

sugar = int(sys.stdin.readline().rstrip())
count = 0

while sugar != 0:
    #sugar가 5로 완전히 나눠지지 않는다면:
    if sugar % 5 != 0:
        #5로 나눠지는 수가 될 때까지 3을 차감해본다.
        sugar -= 3
        count += 1
        #sugar가 3kg이었을 경우를 생각한다:
        if sugar == 0:
            print(count)
            break
    #sugar가 5로 완전히 나눠진다면:
    elif sugar % 5 == 0:
        count += sugar // 5
        print(count)
        break
    #3을 빼다가 sugar가 0이하의 수가 되어버렸다면:
    #5kg과 3kg으로 나눌 수 없는 수이므로
    #-1 처리한다.
    if sugar < 0:
        print(-1)
        break
