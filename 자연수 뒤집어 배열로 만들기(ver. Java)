Q. 자연수 n을 뒤집어 각 자리 숫자를 원소로 가지는 배열 형태로 리턴해주세요. 예를들어 n이 12345이면 [5,4,3,2,1]을 리턴합니다.

import java.util.*;

class Solution {
    public int[] solution(long n) {
        // "" + int형을 해주면 String으로 변환된다.
        String num = "" + n;        
        int[] answer = new int[num.length()];
        int idx = 0;
        
        //n이 0이상인 동안
        while(n > 0){
            // 입력받은 자연수 n의 1의 자리 수가 배열의 맨 앞 인덱스의 요소가 될 수 있도록 넣어준다.
            answer[idx] = (int)(n % 10);
            // 그 다음은 십의 자리 수가 두 번째 요소가 될 수 있도록 왼쪽으로 밀어준다.
            n /= 10;
            // 그 다음 index에 요소를 넣을 수 있도록 idx에 1을 더해준다.
            idx++;
        }
        
        return answer;
    }
}
